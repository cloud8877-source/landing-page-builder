rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the folder
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to verify App Check token
    function hasValidAppCheck() {
      return request.app != null;
    }

    // Helper function to validate file size and type
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB max
             request.resource.contentType.matches('image/(jpeg|jpg|png|webp)') &&
             request.resource.name.matches('^[a-zA-Z0-9_-]+\\.[a-zA-Z]{3,4}$');
    }

    // Helper function to validate profile photos
    function isValidProfilePhoto() {
      return request.resource.size < 2 * 1024 * 1024 && // 2MB max for profile photos
             request.resource.contentType.matches('image/(jpeg|jpg|png|webp)') &&
             request.resource.name.matches('^[a-zA-Z0-9_-]+_profile_[0-9]+_[a-z0-9]+\\.(jpeg|jpg|png|webp)$');
    }

    // Helper function to validate banner images
    function isValidBanner() {
      return request.resource.size < 10 * 1024 * 1024 && // 10MB max for banners
             request.resource.contentType.matches('image/(jpeg|jpg|png|webp)') &&
             request.resource.name.matches('^[a-zA-Z0-9_-]+_banner_[0-9]+_[a-z0-9]+\\.(jpeg|jpg|png|webp)$');
    }

    // User profile photos
    match /users/{userId}/profile/{fileName} {
      // Anyone can read profile photos
      allow read: if true;

      // Only the user can upload their own profile photo
      allow write: if isOwner(userId) &&
                     isValidProfilePhoto() &&
                     hasValidAppCheck();
    }

    // Property images for landing pages
    match /users/{userId}/properties/{fileName} {
      // Anyone can read property images (for public landing pages)
      allow read: if true;

      // Only the user can upload to their own property folder
      allow write: if isOwner(userId) &&
                     isValidImage() &&
                     hasValidAppCheck();
    }

    // Landing page assets (logos, banners, etc.)
    match /users/{userId}/pages/{pageId}/{fileName} {
      // Anyone can read published page assets
      allow read: if true;

      // Only the user can upload to their own page folders
      allow write: if isOwner(userId) &&
                     isValidImage() &&
                     hasValidAppCheck();
    }

    // Site assets (legacy support)
    match /sites/{siteId}/{fileName} {
      allow read: if true;

      allow write: if isAuthenticated() &&
                     isValidImage() &&
                     hasValidAppCheck();
    }

    // General uploads folder for authenticated users
    match /uploads/{userId}/{fileName} {
      allow read: if true;

      allow write: if isOwner(userId) &&
                     request.resource.size < 10 * 1024 * 1024 && // 10MB max
                     hasValidAppCheck();
    }

    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
